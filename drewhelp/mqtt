# start server 
podman run -it -p 1883:1883 -p 9001:9001 eclipse-mosquitto:latest mosquitto -c /mosquitto-no-auth.conf

# install (with nix)
nix-shell -p mosquitto 

# listen to channel
mosquitto_sub -t mqtt/test

# send message 
x=`echo {} | jq --arg PWD "$PWD" '.workdir = $PWD'`
mosquitto_pub -t mqtt/test -m "$x"
